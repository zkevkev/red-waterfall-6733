<h3>Total Members: <%= @character_count %></h3>

<% @characters.each do |character| %>
  <section id=<%= "#{character.id}-#{character.name}" %>>
    <h4><%= character.name %></h4>

    <% if character.image != nil %>
      <div>
        <%= image_tag(character.image) %>
      </div>
    <% end %>

    <section>
      Allies:
      <% if character.allies.present? %>
        <% character.allies.each do |ally| %>
          <%= ally %>, 
        <% end %>
      <% else %>
        None
      <% end %>
    </section>

    <section>
      Enemies: 
      <% if character.enemies.present? %>
        <% character.enemies.each do |enemy| %>
          <%= enemy %>, 
        <% end %>
      <% else %>
        None
      <% end %>
    </section>

    <p>Affiliations: <%= character.affiliation %></p>
  </section>
<% end %>
